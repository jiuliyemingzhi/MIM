<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/len_2"
    android:layout_marginTop="@dimen/len_2"
    android:background="@color/white_alpha_240"
    android:foreground="@drawable/ic_touch_bg"
    android:paddingBottom="@dimen/len_12"
    android:paddingStart="@dimen/len_16"
    android:paddingTop="@dimen/len_12">


    <net.jiuli.common.widget.PortraitView
        android:id="@+id/im_portrait"
        android:layout_width="@dimen/len_40"
        android:layout_height="@dimen/len_40"
        android:layout_gravity="center_vertical|start"
        android:src="@drawable/default_portrait" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/len_24"
        android:layout_gravity="center_vertical|start"
        android:layout_marginEnd="@dimen/len_40"
        android:layout_marginStart="@dimen/len_52"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/font_16"
        tools:text="tring/appbar_scrolling_view_behavior" />

    <CheckBox
        android:id="@+id/cb_select"
        android:layout_width="@dimen/len_40"
        android:layout_height="@dimen/len_40"
        android:layout_gravity="end|center_vertical"
        android:button="@drawable/sel_cb_circle"
        android:layout_margin="@dimen/len_4"
        android:buttonTint="@color/cb_group_contact"
        android:padding="8dp" />
</FrameLayout>