<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/len_4"
    android:paddingEnd="@dimen/len_8"
    android:paddingStart="@dimen/len_56"
    android:paddingTop="@dimen/len_4">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="46dp"
        android:layout_marginTop="@dimen/len_8"
        android:background="@drawable/cell_chat_right_bg"
        android:minHeight="@dimen/len_40"
        android:paddingBottom="@dimen/len_10"
        android:paddingEnd="@dimen/len_20"
        android:paddingStart="@dimen/len_24"
        android:paddingTop="@dimen/len_8">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/len_24"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColor="@color/textPrimary"
            tools:text="@string/action_person" />

    </FrameLayout>

    <net.jiuli.common.widget.PortraitView
        android:id="@+id/portrait"
        android:layout_width="@dimen/len_40"
        android:layout_height="@dimen/len_40"
        android:layout_gravity="end"
        android:padding="1px"
        android:src="@drawable/default_portrait"
        app:civ_border_color="@color/white"
        app:civ_border_width="@dimen/len_2" />

    <net.qiujuer.genius.ui.widget.Loading
        android:id="@+id/loading"
        android:layout_width="@dimen/len_40"
        android:layout_height="@dimen/len_40"
        android:layout_gravity="end"
        android:padding="1px"
        app:gAutoRun="false"
        app:gBackgroundColor="@null"
        app:gForegroundColor="@color/colorAccent"
        app:gForegroundLineSize="1dp"
        app:gProgressFloat="1" />
</FrameLayout>